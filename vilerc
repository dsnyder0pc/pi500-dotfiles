set-unix-mode
store-procedure dos2unix
   write-message &cat $cbufname " converted from DOS to UNIX line endings."
   set-dos-mode
   set-unix-mode
~endm
1 store-macro
   run dos2unix
~endm
store-procedure unix2dos
   write-message &cat $cbufname " converted from UNIX to DOS line endings."
   set-unix-mode
   set-dos-mode
~endm
2 store-macro
   run unix2dos
~endm
set read-hook dos2unix
